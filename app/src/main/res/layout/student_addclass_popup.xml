<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical">

    <EditText
        android:id="@+id/et_facultyemail_add_new_class_student_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Faculty Email"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_code_add_new_class_student_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Class Join Code"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_roll_add_new_class_student_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Roll Number"
        android:inputType="number" />

    <Button
        android:id="@+id/bt_add_new_class_student_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add" />

</LinearLayout>