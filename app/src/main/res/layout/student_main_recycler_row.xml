<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name_student_main_recycler_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CG 1206"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_facultyname_student_main_recycler_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Badal Soni"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_session_student_main_recycler_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2019-2020"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_attendance_student_main_recycler_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Attendance  - 75%"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>